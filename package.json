{
  "name": "@quickdevelopment/wp-js",
  "private": false,
  "version": "1.0.0",
  "repository": "https://github.com/QuickDevelopment/wp-js",
  "author": "QuickDevelopment",
  "license": "MIT",
  "description": "A simple library to interact with the WordPress REST API",
  "type": "module",
  "main": "./dist/wp-js.umd.cjs",
  "module": "./dist/wp-js.js",
  "types": "./dist/main.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/wp-js.js",
      "require": "./dist/wp-js.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wordpress",
    "rest",
    "api",
    "wp",
    "js",
    "javascript",
    "typescript",
    "quickdevelopment",
    "wp-js",
    "client",
    "posts"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  }
}
